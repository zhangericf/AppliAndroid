<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_black"
    tools:context=".comments.CommentsActivity"
    android:padding="10dp">


    <Button
        android:id="@+id/btnComments"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="71dp"
        android:textColor="@color/white"
        android:layout_height="26dp"
        android:layout_below="@+id/comment"
        android:layout_alignEnd="@+id/comment"
        android:layout_alignRight="@+id/comment"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/colorPrimary"
        android:text="@string/send_comment"
        android:textSize="10sp"
        android:visibility="visible"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/transparent_white"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@+id/username"
        android:background="@color/transparent_white"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:hint="@string/writecomments"
        android:textColorHint="@color/transparent_white"
        android:visibility="visible" />

    <EditText
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="right"
        android:textColorHint="@color/transparent_white"
        android:padding="10dp"
        android:textSize="14sp"
        android:background="@color/transparent_white"
        android:layout_below="@+id/comment"
        android:layout_marginTop="1dp"
        android:hint="@string/grade"
        android:inputType="numberDecimal|numberSigned"
        android:visibility="visible"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/TV10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/grade"
        android:layout_toEndOf="@+id/grade"
        android:background="@color/transparent_white"
        android:layout_toRightOf="@+id/grade"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="12dp"
        android:text="/10"
        android:textColor="@color/white"
        android:visibility="visible"
        tools:ignore="HardcodedText,RtlSymmetry"
        android:paddingEnd="12dp" />

    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/grade"
        android:layout_marginTop="10dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@+id/view11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/commentsList"
        android:textSize="20sp" />


    <View
        android:id="@+id/view12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView28"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/white" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view12"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="10dp" />

</RelativeLayout>